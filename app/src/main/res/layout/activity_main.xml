<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.techacademy.kota.hisamatsu.calcapp.AnswerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Input two values:"
        android:id="@+id/text1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/text1"
        android:textSize="16dp"
        android:text="Value1: "
        android:id="@+id/textValue1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textValue1"
        android:layout_alignBottom="@+id/textValue1"
        android:inputType="numberDecimal"
        android:id="@+id/editText1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textValue1"
        android:textSize="16dp"
        android:text="Value2: "
        android:id="@+id/textValue2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textValue2"
        android:layout_alignBottom="@+id/textValue2"
        android:inputType="numberDecimal"
        android:id="@+id/editText2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textValue2"
        android:textSize="16dp"
        android:text="Tap operation:"
        android:id="@+id/text2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/text2"
        android:layout_alignParentStart="true"
        android:text="＋"
        android:id="@+id/buttonAdd"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonAdd"
        android:text="−"
        android:id="@+id/buttonSub" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSub"
        android:layout_toEndOf="@+id/buttonSub"
        android:text="×"
        android:id="@+id/buttonMul"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonMul"
        android:layout_alignParentEnd="true"
        android:text="÷"
        android:id="@+id/buttonDiv" />

</RelativeLayout>
